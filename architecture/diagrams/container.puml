@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

title Diagramme de Conteneur pour l'Application Frontend OpenAI

Person(user, "Utilisateur", "Utilisateur de l'application")

System_Boundary(c1, "Application Frontend OpenAI") {
    Container(spa, "Application Web", "JavaScript, HTML, CSS", "Fournit l'interface utilisateur.")
    Container(web_browser, "Navigateur Web", "Chrome, Firefox, Edge, etc.", "Exécute l'application web monopage.")
    Container(unified_server, "Serveur Unifié", "Node.js, Express", "Gère l'authentification, les sessions, la persistance des données, relaye les requêtes vers l'API OpenAI et sert le frontend.")
}

System_Ext(openai_api, "API OpenAI", "Service d'intelligence artificielle")
System_Ext(sqlite_db, "Base de Données SQLite", "Stocke les utilisateurs, sessions et historiques de chat")

Rel(user, web_browser, "Utilise")
Rel(web_browser, spa, "Héberge")
Rel(spa, unified_server, "Envoie des requêtes à", "HTTPS/JSON")
Rel(unified_server, openai_api, "Relaye les requêtes à", "HTTPS/JSON")
Rel(unified_server, sqlite_db, "Lit et écrit dans", "JDBC/ODBC")

@enduml